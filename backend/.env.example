# ═══════════════════════════════════════════════
# Sayona Shipping Service — Environment Variables
# Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════

# ── Server ──
PORT=3000
NODE_ENV=development                    # development | staging | production

# ── Database (PostgreSQL) ──
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=sayona_shipping
DB_POOL_MAX=20                          # Max pool connections
DB_IDLE_TIMEOUT=30000                   # Idle timeout (ms)
DB_CONN_TIMEOUT=5000                    # Connection timeout (ms)

# ── JWT Authentication ──
JWT_SECRET=your-jwt-secret-min-64-chars-long-replace-this
JWT_REFRESH_SECRET=your-refresh-secret-min-64-chars-long-replace-this
JWT_ACCESS_EXPIRY=15m                   # Access token expiry
JWT_REFRESH_EXPIRY=7d                   # Refresh token expiry

# ── CORS ──
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Rate Limiting ──
RATE_LIMIT_WINDOW_MS=900000             # 15 minutes
RATE_LIMIT_MAX=100                      # Max requests per window
RATE_LIMIT_AUTH_MAX=10                  # Max auth attempts per window
RATE_LIMIT_FORM_MAX=5                   # Max form submissions per window

# ── Security ──
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5                    # Lock after N failed logins
LOCK_DURATION_MS=1800000                # Lock duration (30 min)
BODY_LIMIT=1mb                          # Max request body size

# ── Logging ──
LOG_LEVEL=debug                         # error | warn | info | http | debug
LOG_DIR=./logs

# ── Seed (Optional) ──
ADMIN_EMAIL=admin@sayona.com
ADMIN_PASSWORD=Admin@2026!Secure
STAFF_EMAIL=staff@sayona.com
STAFF_PASSWORD=Staff@2026!Secure
